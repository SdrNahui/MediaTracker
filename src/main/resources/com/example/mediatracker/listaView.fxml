<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="15" style="-fx-background-color: #0D0F12;" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mediatracker.Controller.ListaController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E90FF;"
           text="Lista de series y peliculas" />
    <HBox spacing="10">
        <TextField fx:id="txtBuscar" prefWidth="250" promptText="Buscar..." style="-fx-background-color: #1a1c20;
         -fx-text-fill: white; -fx-prompt-text-fill: #3d5a80;
         -fx-background-radius: 8; -fx-border-color: #1E90FF; -fx-border-radius: 8; -fx-border-width: 1;" />
    </HBox>
    <Label fx:id="lblVacioBusqueda" style="-fx-text-fill: #6fb0ff; -fx-font-size: 20;" text="No se encontro lo solicitado"
           visible="false" />
    <ScrollPane fitToWidth="true" pannable="true" stylesheets="@nightwing.css">
        <FlowPane fx:id="contenedor" alignment="TOP_LEFT" hgap="12" prefWrapLength="500" vgap="12"
                  style="-fx-background-color: transparent; -fx-padding: 10" />
    </ScrollPane>
    <Label fx:id="lblMensaje" style="-fx-text-fill: #6fb0ff; -fx-font-size: 20;" text="" />
    <HBox alignment="CENTER" spacing="20">
        <Button alignment="BOTTOM_LEFT" onAction="#editar" text="Editar" />
        <Button alignment="BOTTOM_RIGHT" onAction="#eliminar" text="Eliminar" />
        <Button onAction="#detalles" text="Mostrar mas" />
    </HBox>

</VBox>
