<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.mediatracker.Controller.HomeSerieCardController"
           styleClass="home-card"  onMouseClicked="#abrirDetalles" >

    <VBox spacing="6" style="-fx-padding: 12;" >
        <Label fx:id="lblTitulo" styleClass="card-title"/>
        <Label fx:id="lblEstado" styleClass="card-sub" onMouseClicked="#marcarSiguienteComoVisto" />
        <ProgressBar fx:id="progreso" prefWidth="200" onMouseClicked="#marcarSiguienteComoVisto" />
    </VBox>
</StackPane>
